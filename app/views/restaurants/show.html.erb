<p><%= link_to "Go back", restaurants_path, {:class => "card-link"} %></p>

<div class="container row">
  <div class="container col-3 mt-2">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= @restaurant.name.capitalize %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= @restaurant.category.capitalize %></h6>
        <p class="card-text"><%= @restaurant.address %></p>
        <p class="card-text"><%= @restaurant.phone_number %></p>
        <div class="d-flex justify-content-around">
        <p><%= link_to "Edit info", edit_restaurant_path(@restaurant), {:class => "card-link"} %></p>
        <p><%= link_to "Leave a Review!", new_restaurant_review_path(@restaurant), {:class => "card-link"} %></p>
        </div>

      </div>
    </div>
  </div>
</div>
<h3>Reviews</h3>

<% @restaurant.reviews.each do |review| %>
<div class="container row">
    <div class="card border-light mb-3 col-6" style="max-width: 18rem;">
      <div class="card-header">On <%= review.created_at.strftime("Rated on %m/%d/%Y") %></div>
      <div class="card-body">
        <h5 class="card-title"><%= review.rating %> ‚≠ê</h5>
        <p class="card-text"><%= review.content %></p>
      </div>
    </div>
  </div>
<% end %>
